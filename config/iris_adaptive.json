{
  "experiment_name": "iris_adaptive",
  "description": "Adaptive VQC that modifies structure during training",
  "dataset": "iris",
  "circuit_type": "adaptive",
  "circuit": {
    "n_qubits": 27,
    "initial_depth": 1,
    "entanglement_pattern": "linear",
    "rotation_gates": ["ry"],
    "adaptation": {
      "strategy": "loss_plateau",
      "patience": 10,
      "threshold": 0.01,
      "max_layers": 6,
      "max_gates": 200,
      "adaptation_frequency": 10
    }
  },
  "training": {
    "epochs": 30,
    "batch_size": 16,
    "optimizer": "COBYLA",
    "learning_rate": 0.1
  },
  "noise": {
    "enabled": false
  },
  "output_dir": "results/iris_adaptive"
}
